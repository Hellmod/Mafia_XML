<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultBlackText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DefaultBlackTextBold" parent="DefaultBlackText">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Autocomplete" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@color/white</item>
    </style>
</resources>