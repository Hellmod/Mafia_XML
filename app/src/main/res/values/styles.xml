<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultBlackText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DefaultBlackTextBold" parent="DefaultBlackText">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Autocomplete" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="CounterStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">@dimen/empty</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconSize">10dp</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:layout_height">@dimen/button_counter_size</item>
        <item name="android:layout_width">@dimen/button_counter_size</item>
    </style>

    <style name="CounterStyle.Minus">
        <item name="backgroundTint">@color/transparent</item>
        <item name="iconTint">@color/colorBgSelected</item>
    </style>

    <style name="CounterStyle.Plus">
        <item name="backgroundTint">@color/colorBgSelected</item>
        <item name="iconTint">@color/black</item>
    </style>

    <!--Text-->
    <style name="BaseText" />

    <style name="BaseTextPrimary" parent="BaseText">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="BaseTextPrimaryBold" parent="BaseTextPrimary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextPrimaryBoldWrap" parent="BaseTextPrimaryBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GreyButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:minWidth">@dimen/empty</item>
        <item name="android:minHeight">@dimen/empty</item>
        <item name="backgroundTint">@color/colorBgSelected</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:textColor">@color/textPrimaryLight</item>
        <item name="iconTint">@color/textPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">@dimen/empty</item>
        <item name="android:insetBottom">@dimen/empty</item>
        <item name="android:paddingStart">@dimen/padding_smaller</item>
        <item name="android:paddingEnd">@dimen/padding_smaller</item>
    </style>
</resources>